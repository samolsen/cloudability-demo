<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @actor.name %>
</p>

<p>
  <b>Birth date:</b>
  <%= @actor.birth_date %>
</p>

<p>
  <b>Gender:</b>
  <%= @actor.gender %>
</p>

<p><%= t(:dvds) %></p>
<ul id="actor_dvds">
  <% @actor.dvds.each do |dvd| %>
    <li><%= dvd.name %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_actor_path(@actor) %> |
