<h1>Listing dvds</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Release date</th>
    <th>Summary</th>
    <th>Asin</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @dvds.each do |dvd| %>
  <tr>
    <td><%= dvd.name %></td>
    <td><%= dvd.release_date %></td>
    <td><%= dvd.summary %></td>
    <td><%= dvd.asin %></td>
    <td><%= link_to 'Show', dvd %></td>
    <td><%= link_to 'Edit', edit_dvd_path(dvd) %></td>
    <td><%= link_to 'Destroy', dvd, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

